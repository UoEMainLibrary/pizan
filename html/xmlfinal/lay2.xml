<cb n="c"/><layout ruledLines="39"/>
<lb n="LAY2.028c:01"/>Com <c><s>J</s></c>'aray <subst><del rend="erasure" evidence="ruling erased, paler ink"></del><add place="inline" evidence="dash fills extra space">ne</add></subst> <rhyme>chastellaine</rhyme>,
